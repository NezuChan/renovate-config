{
   "$schema":"https://docs.renovatebot.com/renovate-schema.json",
   "extends":[
      "config:recommended",
      "helpers:pinGitHubActionDigests",
      "group:allNonMajor",
      ":semanticCommits"
   ],
   "labels":[
      "meta: dependencies"
   ],
   "schedule":[
      "before 6am"
   ],
   "timezone":"Asia/Jakarta",
   "automerge":true,
   "automergeType":"pr",
   "packageRules":[
      {
         "matchUpdateTypes":[
            "minor",
            "patch"
         ],
         "automerge":true
      }
   ],
   "docker":{
      "enabled":true,
      "rangeStrategy":"bump"
   },
   "npm":{
      "rangeStrategy":"bump",
      "packageRules":[
         {
            "matchPackagePatterns":[
               "ansi-regex"
            ],
            "allowedVersions":"^5"
         },
         {
            "matchPackagePatterns":[
               "@types/node-fetch"
            ],
            "allowedVersions":"^2"
         },
         {
            "matchPackagePatterns":[
               "@sapphire"
            ],
            "groupName":"Sapphire Dependencies"
         },
         {
            "matchPackagePatterns":[
               "@typescript-eslint",
               "eslint",
               "typescript",
               "@hazmi35/eslint-config"
            ],
            "groupName":"Eslint Dependencies"
         },
         {
            "matchDepTypes":[
               "engines"
            ],
            "enabled":false
         }
      ]
   }
}
